<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="today" class="java.util.Date"></bean>
	<!-- Date today = new Date(); -->

	<bean id="end" class="java.util.Date">
		<constructor-arg name="year" value="121" />
		<constructor-arg name="month" value="6" />
		<constructor-arg name="date" value="14" />
	</bean>

	<bean id="myclass" class="com.test01.MyClass" lazy-init="true"></bean>

	<bean id="beanTest" class="com.test01.BeanTest">
		<!-- 0. 기본 생성자 -->
		<!-- 1. param 1개짜리 생성자 -->

		<!-- <constructor-arg name="myclass" ref="myclass"></constructor-arg> -->
		<constructor-arg name="date" ref="today"></constructor-arg>
		<property name="myclass" ref="myclass"></property>
		<!-- 3. setDate(Date date) 호출 -->
		<!--<property name="date" ref="today"></property> -->
		<property name="date" ref="end"></property>
		<!-- 4. setNumber(int num) 호출 -->
		<property name="number">
			<value type="short">
				100
			</value>
		</property>
		<!-- 5. setArray(String[] arr) 호출 -->
		<property name="array">
			<array> <!-- array를 list로 바꾸어도 스프링이 알아서 바꿔준다. -->
				<value>박찬종</value>
				<value>단발좌</value>
				<value>김진현</value>
			</array>
		</property>
		<!-- 6.setList(List<String> list) 호출 -->
		<property name="list">
			<list>
				<value>봄</value>
				<value>여름</value>
				<value>가을</value>
				<value>겨울</value>
			</list>
		</property>
		<property name="set">
			<set>
				<value>1</value>
				<value>1</value>
				<value>2</value>
				<value>2</value>
				<value>3</value>
			</set>
		</property>
		<property name="map">
			<map>
				<entry>
					<key>
						<value>1</value>
					</key>
					<value>봄</value>
				</entry>
				<entry>
					<key>
						<value>2</value>
					</key>
					<value>여름</value>
				</entry>
				<entry key="3" value="가을"></entry>
				<entry key="4" value="겨울"></entry>
			</map>
		</property>
		<!-- setScore(List<Score> list) 호출 -->
		<property name="score">
			<list>
				<bean class="com.test01.Score">
					<property name="name" value="박찬종" />
					<property name="kor" value="100" />
					<property name="eng" value="100" />
					<property name="math" value="100" />
				</bean>
				<ref bean="han" />
			</list>
		</property>
	</bean>

	<bean id="han" class="com.test01.Score">
		<constructor-arg value="한효주" />
		<constructor-arg value="100" />
		<constructor-arg value="100" />
		<constructor-arg value="100" />
	</bean>
	
</beans>
