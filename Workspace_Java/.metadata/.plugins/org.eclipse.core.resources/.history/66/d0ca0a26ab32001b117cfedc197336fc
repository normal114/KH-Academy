package com.test01;

public class Mtest02 {

	public static int inputInt() {
		int res = 0;
		
		System.out.println("숫자를 입력해 주세요 : ");
		Scanner sc = new Scanner(System.in);
		res = sc.nextInt();
		
		return res;
				
}
	
	public static int sum(int a, int b) {
		return a + b;
		
