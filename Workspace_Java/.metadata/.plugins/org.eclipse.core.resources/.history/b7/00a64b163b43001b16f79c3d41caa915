package Test;

public class Test01 {
	
	private String color;
	private int speed;
	
	public Test01 () {
	
	}
	
	public Test01(String color) {
		this.color = color ;
		
	}
	public Test01(String color, int speed) {
		this.color = color;
		this.speed = speed;
	}

	public String getColor() {
		return color;
	}
	
	public void setColor(String color) {
		this.color = color;
	}
	
	public int getSpeed() {
		return speed;
	}
	
	public void setSpeed(int speed) {
		this.speed = speed;
	}
	
	public void accelPedal() {
		System.out.println("속도가 10 올라갑니다.");
		speed += 10;
	}
	
	public void breakPedal() {
		speed -= 10;
		System.out.println("속도가 10 줄어듭니다.");
	} else {
		System.out.println("멈췄습니다.");
		speed = 0;
	}	
}

public String toString() {
	return "현재 속도는 "











}